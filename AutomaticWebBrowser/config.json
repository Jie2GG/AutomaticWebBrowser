{
    // 软件设置
    "setting": {
        "window": {
            // 设置窗口最大化 (true 时忽略 size 属性)
            "maximize": false,
            // 设置浏览区域的大小 (不是窗口大小)
            "size": {
                "width": 1000,
                "height": 800
            }
        },
        "browser": {
            // 浏览器缓存路径 (相对路径或绝对路径)
            "profile": "./profile",
            // 浏览器默认语言
            "language": "zh-CN,zh;q=0.9,en;q=0.8",
            // 浏览器用户标识
            "user-agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64; rv:60.0) Gecko/20100101 Firefox/60.0",
            // 启用浏览器字体渲染
            "enable-font-rendering": true,
            // 启用浏览器不被追踪
            "enable-donottrackheader": true,
            // 启用上下文菜单
            "enable-context-menu": true
        },
        "log": {
            "format": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}",
            "level": "Debug",
            "path": "./logs",
            "show-logs": false
        }
    },
    // 任务信息
    "task-info": {
        // 任务地址
        "url": "https://www.baidu.com/",
        // 任务包含的所有操作
        "actions": [
            // 在首页搜索框输入内容
            {
                // 操作名称
                "name": "输入搜索内容",
                // 操作执行条件
                "condition": {
                    "type": "ReadyState",
                    "value": "complete"
                },
                // 操作执行元素
                "element": {
                    "type": "ElementId",
                    "value": "kw"
                },
                // 操作执行动作
                "options": [
                    {
                        "type": "Focus"
                    },
                    {
                        "type": "KeypressInput",
                        "value": "搜索引擎"
                    }
                ]
            },
            // 点击搜索按钮
            {
                "name": "点击搜索",
                "element": {
                    "type": "ElementId",
                    "value": "su"
                },
                "options": [
                    {
                        "type": "Click"
                    }
                ]
            },
            // 处理页面结果
            {
                "name": "处理结果",
                "condition": {
                    "type": "DocumentTitle",
                    "value": "搜索引擎_百度搜索"
                },
                "element": {
                    "type": "ElementId",
                    "value": "content_left"
                },
                "options": [
                    {
                        "type": ""
                    }
                ]
            }
        ]
    }
}
