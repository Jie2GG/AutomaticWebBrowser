{
    "browser": {
        // 浏览器窗口信息
        "window": {
            "state": "Normal", // default, maximize
            "size": {
                "width": 1200,
                "height": 900
            }
        },
        // 浏览器缓存路径 (相对路径或绝对路径)
        "profile": "./profile",
        // 浏览器默认语言
        "language": "zh-CN,zh;q=0.9,en;q=0.8",
        // 浏览器用户标识
        "user-agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64; rv:60.0) Gecko/20100101 Firefox/60.0",
        // 启用浏览器字体渲染
        "enable-font-rendering": true,
        // 启用浏览器不被追踪
        "enable-donottrackheader": true,
        // 启用上下文菜单
        "enable-context-menu": true
    },
    "log": {
        // 日志窗口信息
        "window": {
            "visible": false
        },
        // 日志输出格式
        "format": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}",
        // 日志等级
        "level": "Verbose",
        // 日志持久化路径
        "save-path": "./logs"
    },
    "task": {
        "url": "https://www.baidu.com/",
        // 任务包含的所有操作
        "actions": [
            {
                // 开始条件
                "condition": {
                    "type": "Ready"
                },
                // 操作元素
                "element": {
                    "search-mode": "GetElementById",
                    "search-value": "kw"
                },
                // 作业列表
                "jobs": [
                    // 输入字符
                    {
                        "type": "InputKeypressValue",
                        "value": "123"
                    },
                    // 按下回车
                    {
                        "type": "KeyPress",
                        "value": { "key": "Enter" }
                    }
                ]
            },
            {
                "condition": {
                    "type": "Delay",
                    "value": 5000
                },
                "element": {
                    "search-mode": "EvaluateXPath",
                    "search-value": "//div[@id=\"content_left\"]/div[@id]//h3/a"
                },
                "jobs": [
                    {
                        "type": "OpenLink",
                        "value": [
                            {
                                "condition": {
                                    "type": "Ready"
                                }
                            }
                        ]
                    }
                ]
            }
        ]
    }
}