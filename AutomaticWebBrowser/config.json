{
    // 日志配置
    "log": {
        // 日志输出格式
        "format": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}",
        // 日志等级
        "level": "Debug",
        // 日志持久化路径
        "save-path": "./logs"
    },
    // 浏览器配置
    "browser": {
        // 窗体配置
        "window": {
            // 窗体状态 (参考: System.Windows.WindowState 枚举)
            "state": "Normal",
            // 窗体位置 (参考: System.Windows.WindowStartupLocation 枚举)
            "startup-location": "CenterScreen",
            "width": 1200,
            "height": 900
        },
        // 数据路径
        "data-path": "./data",
        // 启用跟踪防护功能
        "enable-tracking-prevention": true,
        // 启用 javascript
        "enable-javascript": true,
        // 启用密码自动保存
        "enable-password-autosave": false,
        // 启用开发者工具
        "enable-dev-tools": true,
        // 启用上下文菜单
        "enable-context-menu": true
    },
    // 任务配置
    "task": [
        {
            "url": "https://cps-check.com/cn/mouse-buttons-test",
            "url-reload-count": 1,
            "url-reload-delay": 1000,
            "auto-close": false,
            "jobs": [
                {
                    "condition": {
                        "type": "Ready"
                    },
                    "element": {
                        "type": "GetElementById",
                        "value": "mouse-container"
                    },
                    "actions": [
                        {
                            "type": "MouseClick",
                            "value": {
                                "buttons": "Left",
                                "count": 5,
                                "delay": 1000
                            }
                        }
                    ]
                }
            ]
        }
    ]
}